@model IEnumerable<OfflineMessaging.Web.Models.Message>

@if (Model != null)
{
    foreach (var message in Model)
    {
        if (message.SenderId == Session["UserId"].ToString())
        {
            <div class="outgoing_msg">
                <div class="sent_msg">
                    <p>
                       
                    </p>
                    <span class="time_date">@message.Time.Hour:@message.Time.Minute | @message.Time.TimeOfDay</span>
                </div>
            </div>
        }
        else
        {
            <div class="incoming_msg">
                <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                <div class="received_msg">
                    <div class="received_withd_msg">
                        <p>
                            @message.Content
                        </p>
                        <span class="time_date"> @message.Time.Hour:@message.Time.Minute | @message.Time.TimeOfDay</span>
                    </div>
                </div>
            </div>
        }
    }
}


